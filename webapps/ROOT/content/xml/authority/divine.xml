<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.stoa.org/epidoc/schema/latest/tei-epidoc.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title xml:lang="en">Authority list of divine names and epithets in ECG</title>
            </titleStmt>
            <publicationStmt><ab/></publicationStmt>
            <sourceDesc><ab/></sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <div type="commentary">
                <listPerson type="divine">
                    <head xml:lang="en">Divine and mythological figures</head>
                    <head xml:lang="ka">ღვთაებათა სახელები</head>
                    <person xml:id="adam">
                        <persName xml:lang="en">Adam</persName>
                        <persName xml:lang="ka">ადამ</persName>
                        <persName xml:lang="grc">Ἀδάμ</persName>
                    </person>
                    <person xml:id="theos">
                        <persName xml:lang="en">God</persName>
                        <persName xml:lang="ka">ღმერთ</persName>
                        <persName xml:lang="grc">Θεός</persName>
                        <persName xml:lang="grc">Κύριος</persName>
                        <persName xml:lang="grc">Σαβαώθ</persName>
                    </person>
                    <person xml:id="maria">
                        <persName xml:lang="en">Virgin Mary</persName>
                        <persName xml:lang="ka">ღმრთისმშობელ</persName>
                        <persName xml:lang="grc">Θεοτόκος</persName>
                   </person>
                    <person xml:id="iesous">
                        <persName xml:lang="en">Jesus Christ</persName>
                        <persName xml:lang="ka">იესო ქრისტე</persName>
                        <persName xml:lang="grc">Ἰησοῦς Χριστός</persName>
                    </person>

                    <person sameAs="#theos">
                        <persName xml:lang="en">Sabaoth</persName>
                        <persName xml:lang="ka">საბაოთ</persName>
                        <persName xml:lang="grc">Σαβαώθ</persName>
                    </person>
                    <person sameAs="#iesous">
                        <persName xml:lang="en">Christ</persName>
                        <persName xml:lang="ka">ქრისტე</persName>
                        <persName xml:lang="grc">Χριστός</persName>
                    </person>
                   
                </listPerson>
                
                
                
                <!-- წმინდანები -->
                
                <listPerson type="saints">
                    <head xml:lang="en">Saints</head>
                    <head xml:lang="ka">წმინდანები</head>
                    <person xml:id="stgeorge">
                        <persName xml:lang="en">St George</persName>
                        <persName xml:lang="ka">წმ. გიორგი</persName>
                        <persName xml:lang="grc">Ἅγιος Γεώργιος</persName>
                    </person>
                    <person xml:id="stmichael">
                        <persName xml:lang="en"/>
                        <persName xml:lang="ka">წმ. მიქაელ</persName>
                        <persName xml:lang="grc"/>
                    </person>
                    <person xml:id="stgabriel">
                        <persName xml:lang="en"/>
                        <persName xml:lang="ka">წმ. გაბრიელ</persName>
                        <persName xml:lang="grc"/>
                    </person>
                    
                    <person xml:id="stpetre">
                        <persName xml:lang="ka">წმ. პეტრე</persName>
                    </person>
                    
                    <person xml:id="stgrigol">
                        <persName xml:lang="en"/>
                        <persName xml:lang="ka">წმ. გრიგოლ</persName>
                        <persName xml:lang="grc"/>
                    </person>
                    
                    <person xml:id="mrtdimitri">
                        <persName xml:lang="ka">მოწამე დიმიტრი</persName>
                    </person>
                    
                    <person xml:id="nestor">
                        <persName xml:lang="ka">ნესტორ</persName>
                    </person>
                    
                    <person xml:id="origene">
                        <persName xml:lang="ka">ორიგენე</persName>
                    </person>
                    
                    <person xml:id="marine">
                        <persName xml:lang="ka">წმ. მარინე</persName>
                    </person>
                    
                </listPerson>
            </div>
        </body>
    </text>
</TEI>