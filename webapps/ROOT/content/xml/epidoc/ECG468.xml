                <ab>
                    <lb n="1"/><w lemma="წმიდა"><expan><abbr>წ</abbr><ex>მიდა</ex><abbr>ჲ</abbr></expan></w> <persName ref="attestedperson.xml#person4"><w>მარინა</w></persName> 
